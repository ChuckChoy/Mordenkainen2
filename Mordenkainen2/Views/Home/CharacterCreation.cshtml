                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-12 text-center"><h4>Money &amp; Equipment</h4></div>
                        <div class="col-2"></div>
                        <div class="col-8">
                            <label asp-for="Money.Copper" class="control-label formText">Copper</label>
                            <input asp-for="Money.Copper" class="form-control" placeholder="ex. 10" />
                            <label asp-for="Money.Silver" class="control-label formText">Silver</label>
                            <input asp-for="Money.Silver" class="form-control" placeholder="ex. 10" />
                            <label asp-for="Money.Electrum" class="control-label formText">Electrum</label>
                            <input asp-for="Money.Electrum" class="form-control" placeholder="ex. 10" />
                            <label asp-for="Money.Gold" class="control-label formText">gold</label>
                            <input asp-for="Money.Gold" class="form-control" placeholder="ex. 10" />
                            <label asp-for="Money.Platinum" class="control-label formText">Platinum</label>
                            <input asp-for="Money.Platinum" class="form-control" placeholder="ex. 10" />
                            <label asp-for="CharacterSheet.Equipment" class="control-label form-text"></label>
                            <textarea asp-for="CharacterSheet.Equipment" class="form-control" placeholder="Equipment goes here"></textarea>
