                                            <td><input asp-for="Skills.Deception" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="Skills.Deception" class="control-label form-text">Deception</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="Skills.History_T" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="Skills.History" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="Skills.History" class="control-label form-text">History</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="Skills.Insight_T" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="Skills.Insight" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="Skills.Insight" class="control-label form-text">Insight</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="Skills.Intimidation_T" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="Skills.Intimidation" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="Skills.Intimidation" class="control-label form-text">Intimidation</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="Skills.Investigation_T" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="Skills.Investigation" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="Skills.Investigation" class="control-label form-text">Investigation</label></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-2"></div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="row">
                        <div class="col-12 text-center"><h4>Skills 2 of 2</h4></div>
                        <div class="col-2"></div>
                        <div class="col-8">
                            <div class="table-responsive">
                                <table class="table table-striped table-sm center-data">
                                    <thead>
                                        <tr>
                                            <td>Prof.</td>
