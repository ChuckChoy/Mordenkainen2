@model CharacterSheetViewModel
@{
    ViewData["Title"] = "CharacterCreation";
}

<!--Note: need some way to page through multiple blocks of inputs. Ideas: partial views, -->
<div class="container">
    <h2>Character Creation</h2>
    <button id="saveCharacter" class="btn btn-danger">Save Character</button>
</div>
<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
       
        <form id="sheetform" asp-controller="Home" asp-action="CreateCharacter" method="post">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-12 text-center"><h4>Main Info</h4></div>
                        <div class="col-2"></div>
                        <div class="col-8">
                            <label asp-for="CharacterSheet.CharacterName" class="control-label formText">Character Name</label>
                            <input asp-for="CharacterSheet.CharacterName" class="form-control" placeholder="ex. Thoradin Fireforge" />
                            <label asp-for="CharacterSheet.Class" class="control-label formText">Character Class</label>
                            <input asp-for="CharacterSheet.Class" class="form-control" placeholder="ex. Paladin" />
                            <label asp-for="CharacterSheet.CharLevel" class="control-label formText">Character Level</label>
                            <input asp-for="CharacterSheet.CharLevel" class="form-control" placeholder="ex. 1" />
                            <label asp-for="CharacterSheet.BackgroundID" class="control-label formText">Background</label>
                            <select asp-for="CharacterSheet.BackgroundID" class="form-control"></select>
                            <label asp-for="CharacterSheet.Race" class="control-label formText">Race</label>
                            <input asp-for="CharacterSheet.Race" class="form-control" placeholder="ex. Dwarf" />
                            <label asp-for="CharacterSheet.AlignmentID" class="control-label formText">Alignment</label>
                            <select asp-for="CharacterSheet.AlignmentID" class="form-control"></select>
                            <label asp-for="CharacterSheet.Experience" class="control-label formText">Experience</label>
                            <input asp-for="CharacterSheet.Experience" class="form-control" placeholder="ex. 1000" />
                        </div>
                        <div class="col-2"></div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-12 text-center"><h4>Ability Scores</h4></div>
                        <div class="col-2"></div>
                        <div class="col-8">
                            <label asp-for="CharacterSheet.Strength" class="control-label formText">Strength</label>
                            <input asp-for="CharacterSheet.Strength" class="form-control" placeholder="ex. 10" />
                            <label asp-for="CharacterSheet.Dexterity" class="control-label formText">Dexterity</label>
                            <input asp-for="CharacterSheet.Dexterity" class="form-control" placeholder="ex. 10" />
                            <label asp-for="CharacterSheet.Constitution" class="control-label formText">Constitution</label>
                            <input asp-for="CharacterSheet.Constitution" class="form-control" placeholder="ex. 10" />
                            <label asp-for="CharacterSheet.Wisdom" class="control-label formText">Wisdom</label>
                            <input asp-for="CharacterSheet.Wisdom" class="form-control" placeholder="ex. 10" />
                            <label asp-for="CharacterSheet.Intelligence" class="control-label formText">Intellligence</label>
                            <input asp-for="CharacterSheet.Intelligence" class="form-control" placeholder="ex. 10" />
                            <label asp-for="CharacterSheet.Charisma" class="control-label formText">Charisma</label>
                            <input asp-for="CharacterSheet.Charisma" class="form-control" placeholder="ex. 10" />
                        </div>
                        <div class="col-2"></div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-12 text-center"><h4>Saving Throws</h4></div>
                        <div class="col-2"></div>
                        <div class="col-8">
                            <label asp-for="CharacterSheet.Inspiration" class="control-label formText">Inspiration</label>
                            <input asp-for="CharacterSheet.Inspiration" class="form-control" placeholder="ex. 10" />
                            <label asp-for="CharacterSheet.ProficiencyBonus" class="control-label formText">Proficiency Bonus</label>
                            <input asp-for="CharacterSheet.ProficiencyBonus" class="form-control" placeholder="ex. 10" />
                            <div class="table-responsive">
                                <table class="table table-striped table-sm center-data">
                                    <thead>
                                        <tr>
                                            <td>Prof.</td>
                                            <td>#</td>
                                            <td>Type</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><input asp-for="SavingThrows.StrSaveProf" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="SavingThrows.StrSave" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="SavingThrows.StrSaveProf" class="control-label form-text">Strength</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="SavingThrows.DexSaveProf" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="SavingThrows.DexSave" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="SavingThrows.DexSaveProf" class="control-label form-text">Dexterity</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="SavingThrows.ConSaveProf" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="SavingThrows.ConSave" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="SavingThrows.ConSaveProf" class="control-label form-text">Constitution</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="SavingThrows.WisSaveProf" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="SavingThrows.WisSave" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="SavingThrows.WisSaveProf" class="control-label form-text">Wisdom</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="SavingThrows.IntSaveProf" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="SavingThrows.IntSave" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="SavingThrows.IntSaveProf" class="control-label form-text">Intelligence</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="SavingThrows.ChaSaveProf" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="SavingThrows.ChaSave" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="SavingThrows.ChaSaveProf" class="control-label form-text">Charisma</label></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-2"></div>
                    </div>
                </div>

