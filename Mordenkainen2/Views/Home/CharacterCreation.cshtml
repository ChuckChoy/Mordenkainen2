                                            <td><label asp-for="Skills.AnimalHandling" class="control-label form-text">Animal Handling</label></td>
                                        </tr>
                                        <tr>
                                            <td><input asp-for="Skills.Arcana_T" type="checkbox" class="form-control" /></td>
                                            <td><input asp-for="Skills.Arcana" placeholder="ex. 1" class="form-control" /></td>
                                            <td><label asp-for="Skills.Arcana" class="control-label form-text">Arcana</label></td>
                                        </tr>
                                        <tr>
